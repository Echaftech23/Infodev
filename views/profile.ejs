<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../public/css/profile.css">
</head>
<body>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <div class="card mb-4">
          <div class="card-header d-flex align-items-center">
            <div class="me-3">
              <img src="https://via.placeholder.com/150" alt="User Profile Picture" id="profilePicture" class="rounded-circle" width="100">
            </div>
            <div>
              <h1 class="h4 mb-0" id="userName">John Doe</h1>
              <p id="userEmail" class="text-muted">johndoe@example.com</p>
            </div>
           
          </div>
        </div>

        <div class="card mb-4 hidden" id="profileEditForm">
          <div class="card-header">
            <h2 class="h5">Edit Profile</h2>
          </div>
          <div class="card-body">
            <form id="editProfileForm">
              <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" id="name" class="form-control" value="John Doe">
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" class="form-control" value="johndoe@example.com">
              </div>
              <div class="mb-3">
                <label for="profilePictureInput" class="form-label">Profile Picture:</label>
                <input type="file" id="profilePictureInput" class="form-control">
              </div>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h2 class="h5">My Articles</h2>
          </div>
          <div class="list-group list-group-flush" id="articlesList">
            <% if (user.articles.length > 0) { %>
              <% user.articles.forEach(article => { %>
                <div class="list-group-item">
                  <h3 class="h6 mb-1"><%= article.title %></h3>
                  <p class="text-muted small">Published on <%= article.createdAt.toDateString() %></p>
                </div>
              <% }); %>
            <% } else { %>
              <div class="list-group-item">
                <p class="text-muted">No articles found.</p>
              </div>
            <% } %>
          </div>
        </div>
        
      </div>
    </div>
  </div>

  <!-- Bootstrap JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../public/js/profile.js"></script>
</body>
</html>
